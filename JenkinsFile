pipeline {

    agent any

    stages {
       stage ('GIT') {
            steps {
               echo "Getting Project from Git";
                git branch: "ahmed",
                    url: "https://github.com/AhmedMaiez-am/DevOps-Backend",
                    credentialsId: "68dbec7f-2caf-4eca-b5ca-c24daa3341e7";
            }
        }

        stage("MVN Clean") {
            steps {
                sh "mvn clean package -DskipTests"
            }
        }
        stage("MVN Build") {
            steps {
                sh "mvn package -DskipTests"
            }
        }
          stage("MVN Test") {
            steps {
                sh "mvn test"
            }
        }
       
        stage("SonarQube") {
            steps {
                sh "mvn sonar:sonar"
            }
        }
        stage('Nexus') {
            steps {
                 sh 'mvn clean deploy -Dmaven.test.skip=true'
            }
        }
        stage('Build Docker image') {
            steps{
                script{
                sh 'docker build -t ahmeddhia/devops .'
                }
            }
        }
        stage('Connect to DockerHub') {
            steps {
                script{
                sh 'docker login -u ahmeddhia -p ahmeddhia'
                }
            }
        }
                stage('Push Docker image') {
            steps {
                script{
                sh 'docker push ahmeddhia/devops'
                }
            }
        }
        stage('Run Spring && MySQL Containers') {
            steps{
                script {
                    sh 'docker-compose up -d'
                }
            }
        }
   
    }

}